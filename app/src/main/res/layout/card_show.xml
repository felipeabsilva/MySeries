<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/image_show_poster"
            android:layout_width="100dp"
            android:layout_height="140dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:padding="6dp"
            android:src="@drawable/movie_stock_picture"/>

        <TextView
            android:id="@+id/text_show_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image_show_poster"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorAccent"
            android:textSize="22sp"
            android:padding="6dp"
            android:text="Velozes e Furiosos"/>

        <TextView
            android:id="@+id/text_show_genres"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/image_show_poster"
            app:layout_constraintTop_toBottomOf="@+id/text_show_title"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/colorAccent"
            android:padding="6dp"
            android:textSize="18sp"
            android:text="Ação, Comédia"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon_favorite_show"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:padding="8dp"
            android:src="@drawable/ic_favorite_applied"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>