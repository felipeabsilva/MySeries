<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:background="@drawable/card_details_style">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_show_poster_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_app_stock"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/card_image_view_details_style"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_show_title_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="6dp"
            tools:text="Título do show"
            android:textColor="@color/whiteColor"
            android:textSize="22sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_show_poster_details"
            app:layout_constraintRight_toLeftOf="@id/icon_favorite_show_details"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_favorite_show_details"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:layout_constraintTop_toBottomOf="@id/image_show_poster_details"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="6dp"
            android:src="@drawable/ic_favorite_applied"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_show_genres_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            tools:text="Generos do show"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_show_title_details" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_show_release_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            tools:text="Data de lançamento do show"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_show_genres_details" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_show_summary_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            tools:text="Sinopse do show"
            android:textColor="@color/whiteColor"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_show_release_details" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>